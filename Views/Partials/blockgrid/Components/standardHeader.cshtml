@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.StandardHeader>>

<header>
    <div class="container">
        @if (Model.Content.Image != null)

        {
            <!-- Image-->
            <img class="masthead-avatar mb-5" src="@Model.Content.Image.GetCropUrl(400)" alt="@Model.Content.Image.GetAltText()" />
        }
        <h1>@Model.Content.Title</h1>

        @if (!string.IsNullOrWhiteSpace(Model.Content.Subtitle))

        {
            
            <p>@Model.Content.Subtitle</p>
        }
    </div>
</header>